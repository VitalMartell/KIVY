<MyButton@Button>:
    font_size: '25sp'

<Container>:
    bt1 : bt1
    bt2 : bt2
    bt3 : bt3
    bt4 : bt4
    bt5 : bt5
    bt6 : bt6
    bt7 : bt7
    bt8 : bt8
    bt9 : bt9
    bt0 : bt0
    btx : btx
    btd : btd
    btpl : btpl
    btm : btm
    btc : btc
    btcom : btcom
    bteq : bteq
    txt_inp : txt_inp


    GridLayout:
        size: root.width, root.height
        cols: 1
        padding: 3
        spacing: 3

        AnchorLayout:
            size_hint_y: 0.25

            TextInput:
                id: txt_inp
                text_size: self.size
                font_size: '40sp'
                halign: 'right'
                multiline: False

        GridLayout:
            cols: 4
            rows: 4
            spacing: 3

            MyButton:
                id : bt7
                text: '7'
                on_press: root.ch_txt('7')
            MyButton:
                id : bt8
                text: '8'
                on_press: root.ch_txt('8')
            MyButton:
                id : bt9
                text: '9'
                on_press: root.ch_txt('9')
            MyButton:
                id : btx
                text: 'x'
                on_press: root.ch_txt('*')
            MyButton:
                id : bt4
                text: '4'
                on_press: root.ch_txt('4')
            MyButton:
                id: bt5
                text: '5'
                on_press: root.ch_txt('5')
            MyButton:
                id : bt6
                text: '6'
                on_press: root.ch_txt('6')
            MyButton:
                id : btd
                text: '/'
                on_press: root.ch_txt('/')
            MyButton:
                id : bt1
                text: '1'
                on_press: root.ch_txt('1')
            MyButton:
                id : bt2
                text: '2'
                on_press: root.ch_txt('2')
            MyButton:
                id : bt3
                text: '3'
                on_press: root.ch_txt('3')
            MyButton:
                id : btm
                text: '-'
                on_press: root.ch_txt('-')
            MyButton:
                id : btc
                text: 'C'
                on_press: root.clr()
            MyButton:
                id : bt0
                text: '0'
                on_press: root.ch_txt('0')
            MyButton:
                id : btcom
                text: ','
                on_press: root.ch_txt('.')
            MyButton:
                id : btpl
                text: '+'
                on_press: root.ch_txt('+')
        MyButton:
            id: bteq
            text: '='
            size_hint_y: 0.25
            on_press: root.eql()
