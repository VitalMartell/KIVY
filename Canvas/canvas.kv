<Container>:
    orientation: 'horizontal'
    
    AnchorLayout:
        size_hint: 0.9, 1
        canvas:
            Color:
                rgba: 0.1, 0.1, .1, .5
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0.9, .1, .1, .9
            Line:
                width: 2.
                points: root.zero_point()
            Point:
                points: root.points()
                pointsize: 3
                
        Label:
            text: "0"
                

    BoxLayout:
        size_hint: 0.1, 1
        orientation: 'vertical'
        Button:
            text: '1'
            size_hint: 1, 1
        Button:
            text: '2'
            size_hint: 1, 1
        Button:
            text: '3'
            size_hint: 1, 1
        Button:
            text: '4'
            size_hint: 1, 1
        Button:
            text: '5'
            size_hint: 1, 1

            
